<% if current_user.has_reviewed? @restaurant %>
  <p>You have already reviewed this restaurant</p>
<% else %>

<%= form_for [@restaurant, @review] do |f| %>
<p>
  <%= f.label :rating %><br>
  <%= f.select :rating, (1..5) %><br>
</p>

<p>
  <%= f.label :comment %><br>
  <%= f.text_area :comment %><br>
</p>

<p>
  <%= f.submit 'Leave Review'%><br>
</p>

<% end %>
<% end %>
