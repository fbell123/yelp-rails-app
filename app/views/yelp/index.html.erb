
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h1>Yelp</h1>
    <h4>Lorem Ipsum</h4>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-left">
    <ul style="list-style: none; padding-left: 0;">
        <% @restaurants.each do |res| %>
        <li><a href='/restaurants/<%= res.id%>' id="<%= res.name %>" ><%= res.name %></a>
              <br>
                <%= res.description %>
                <%= res.average_rating %></li>
                <% if current_user != nil %>
                <%= link_to "Review #{res.name}", new_restaurant_review_path(res), id: "review_#{res.name}" %>

            <% end %>

            <br>
            <% end %>
          </ul>

          <% if current_user.nil? %>
          To register a new restaurant:<br>
          <%= link_to('Sign in', new_user_session_path) %>
          <% else %>
          <form class="button" action="/restaurants/new" method="get">
            <button type="submit" name="new_restaurant" value="Create new restaurant">Create new restaurant</button>
          </form>
          <% end %>
        </div>
      </div>

      <div class="container">
        <h2>Accordion Example</h2>


        <div class="panel-group" id="accordion">
          <ul>

            <% @restaurants.each do |res| %>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=res.id%>"><%= res.name %></a>
                </h4>
              </div>
              <div id="collapse<%=res.id%>" class="panel-collapse collapse in">
                <div class="panel-body">
                  <li><a href='/restaurants/<%= res.id%>' id="<%= res.name %>" ></a>
                    <%= res.description %>
                    <%= res.average_rating %></li>
                    <% if current_user != nil %>
                    <%= link_to "Review #{res.name}", new_restaurant_review_path(res), id: "review_#{res.name}" %>

                    <% end %>
                  </div>
                </div>
              </div>
              <% end %>
          </ul>
        </div>
