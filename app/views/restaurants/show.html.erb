<p>
  <strong>Restaurant Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Average rating:</strong>
  <%= @restaurant.average_rating %>
</p>

<p>

  Belongs to <%= @restaurant.user_email %>
</p>

  <strong>Reviews:</strong>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      Review:<br>
      <%= review.comment %><br>
      Rating:
      <%= review.rating %><br><br>
      <%= review.user_email %><br><br>
      <% if review.user_id == current_user.id %>
        <%= link_to 'delete', review_path(review), method: :delete, data: {confirm: 'You sure?'} %>
      <% end %>
    </li>
    <%end%>
  </ul>
</p>


<% if current_user.id == @restaurant.user_id %>
<%= link_to '<button type="submit"> Edit</button>'.html_safe, edit_restaurant_path(@restaurant), :id => 'edit_restaurant_button'%>
<% end %>
